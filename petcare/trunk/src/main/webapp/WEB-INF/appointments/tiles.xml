<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- Abstract Appointments template -->
	<definition name="appointsments.layout" extends="page">
		<put-attribute name="localNavigation" value="/WEB-INF/appointments/localNavigation.jsp" type="template"/>
	</definition>

	<!-- Appointment Calendar -->
	<definition name="appointments" extends="appointsments.layout">
		<put-attribute name="title" value="Appointments" type="string" />
		<put-attribute name="content" value="/WEB-INF/appointments/calendar.jsp" type="template" />
		<put-list-attribute name="scripts">
			<add-attribute value="jquery-1.4.1.min.js" />
			<add-attribute value="jquery-ui-1.7.2.custom.min.js" />
		</put-list-attribute>
		<put-list-attribute name="styles">
			<add-attribute value="jquery/ui-lightness/jquery-ui-1.7.2.custom.css" />
		</put-list-attribute>		
	</definition>
	
</tiles-definitions>